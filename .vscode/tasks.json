{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Quiz App",
      "type": "shell",
      "command": "npx",
      "args": ["serve", "quiz-app", "-p", "3000"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop Quiz App",
      "type": "shell",
      "command": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :3000') do taskkill /PID %a /F",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Start Docs",
      "type": "shell",
      "command": "npx",
      "args": ["serve", "docs", "-p", "4000"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Stop Docs",
      "type": "shell",
      "command": "for /f \"tokens=5\" %a in ('netstat -ano ^| findstr :4000') do taskkill /PID %a /F",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
